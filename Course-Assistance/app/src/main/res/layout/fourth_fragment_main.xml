<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:id="@+id/mepage_sefiBG"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_header_bg"/>
        <ImageView
            android:layout_marginTop="72dp"
            android:layout_marginBottom="36dp"
            android:layout_width="168dp"
            android:scaleType="centerCrop"
            android:layout_height="168dp"
            android:src="@drawable/header"
            android:layout_gravity="center_horizontal"
            android:id="@+id/mepage_sefi"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="20sp"
            android:text="设置"
            android:drawableLeft="@drawable/ic_settings_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/md_amber_600"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/md_grey_300"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清理缓存"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/md_pink_500"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_400"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="20dp"
            android:layout_marginBottom="12dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_history_24dp"
            android:drawableTint="@color/md_cyan_400"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_400"/>
    </LinearLayout>
</LinearLayout>